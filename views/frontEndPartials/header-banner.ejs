<div class="header-banner">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <% bannerConfig.forEach(function(item, index){ %>
                <div class="swiper-slide slide<%= index %>" style="background: url('<%= item.url %>') no-repeat center; background-size: cover;">
                    <% if (item.text) {%>
                        <div class="title txt">
                            <%= item.text %>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
        <div class="swiper-button-prev"><span></span></div>
        <div class="swiper-button-next"><span></span></div>
        <ul class="swiper-pagination autoplay"></ul>
    </div>
</div>