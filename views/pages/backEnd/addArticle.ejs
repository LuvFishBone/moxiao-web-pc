<!doctype html>
<html lang="zh-cn">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/backEnd/reset.css">
    <script src="/javascripts/jquery-1.11.1.min.js"></script>
    <script src="/javascripts/backEnd/jquery-form.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"></script>
    <style>
    .addArticle-page{
    font-size: 12px;
    }

    .addArticle-page .form-group {
      padding: 10px 5px;
    }

    .addArticle-page .form-group input{
      width: 80%;
    }
    </style>
  </head>
  <body>
    <div id="addArticleForm" class="addArticle-page">
      <div class="form-group">
        <label>文章标题</label>
        <input type="text" id="title" class="form-control" placeholder="文章标题">
      </div>
      <div class="form-group">
        <label>文章简介</label>
        <input type="text" id="desc" class="form-control" placeholder="文章简介">
      </div>
      <div class="form-group">
        <label>文章缩略图URL</label>
        <input type="text" id="thumbUrl" class="form-control" placeholder="文章缩略图">
       <!-- <input type="file" name="thumbFile" id="thumbFile">-->
        <form id="thumbForm" method="POST" target="edui_iframe" enctype="multipart/form-data" action="/ueditor/ueditor-backend?action=uploadimage">
          <input id="thumbFile" type="file" accept="image/*" name="upfile" />
          <button type="submit">上传</button>
        </form>
        <iframe id="edui_iframe" name="edui_iframe" style="display:none;"></iframe>
      </div>
      <div class="form-group">
        <label>文章内容</label>
        <script id="editor" type="text/plain" style="width:100%;height:500px;"></script>
      </div>
      <button id="submit" class="btn btn-default">提交</button>
    </div> 
    <script src="/javascripts/ajax-common.js?version=1.0"></script>
    <script src="/javascripts/backEnd/addArticle.js"></script>
  </body>
</html>