<!doctype html>
<html lang="zh-cn">
  <head>
    <title>moxiao article list</title>
    <link rel="stylesheet" href="/stylesheets/backEnd/reset.css">
    <style>
      .article-list-page table{
        border-radius: 5px;
        font-size: 12px;
        font-weight: normal;
        border: none;
        border-collapse: collapse;
        width: 100%;
        max-width: 100%;
        white-space: nowrap;
        background-color: white;
        table-layout:fixed;word-break:break-all;
      }

      .tb-list thead th {
        color: #fff;
        background: #324960;
      }

      .tb-list td, .tb-list th {
        padding: 5px 10px;
        height: 30px;
        vertical-align: middle;
        box-sizing: border-box;
        overflow-x: hidden;
        overflow-y: auto;
        width: 120px;
        font-size: 13px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .tb-list td.none{
        width: 100%;
      }

      .tb-list td{
        text-align: center;
        border-bottom: 1px solid #dedede;
      }
      .tb-list td a.ope{
        padding: 0 5px;
        color: #0188ff;
        text-decoration: none;
      }
      .tb-list td a.ope:hover{
        color:#ff6600;
      }
      .tb-list td img{
        display: inline-block;
        width: 50px;
      }
      .add-btn{
        float: right;
        color: #ff6600;
      }
    </style>
  </head>
  <body>
    <div class="article-list-page">
      <table class="tb-list" id="articles">
          <thead>
          <tr>
              <th>标题</th>
              <th>简介</th>
              <th>缩略图</th>
              <th>内容</th>
              <th>操作 <a class="add-btn" href="/backend/addArticle">+添加</a></th>
          </tr>
          </thead>
          <tbody>
            <tr><td class="none" colspan="5">暂无文章</td></tr>
          </tbody>
      </table>
    </div>
    <script src="/javascripts/jquery-1.11.1.min.js"></script>
    <script src="/javascripts/ajax-common.js?version=1.0"></script>
    <script>
      $(function() {
        var $table = $('#articles');
        var $tbody = $table.find('tbody');
          API.get('/api/article/list', {}, function(res) {
            // console.log(res);
            var result = res.data;
            var _html = [];
            for (var i = 0; i < result.length; i++) {
              var dt = result[i];
              var item = '<tr><td>' + dt.title +
              '</td><td>' + dt.intro +
              '</td><td>' + '<img src=' + dt.thumbUrl + ' />' +
              '</td><td>' + '<a class="ope" href="/backend/articleEditer/'+ dt.id +'">查看详情</a>' +
              '</td><td>'+ '<a class="ope" href="/backend/articleEditer/'+ dt.id +'">编辑</a>' +
              '<a class="ope remove" data-id="'+ dt.id +'">删除</a>' +
              '</td>';
              _html.push(item);
            }
            $tbody.html(_html.join(''));
            $table.find('.remove').click(function() {
              var deleteId = $(this).data('id');
              API.get('/api/article/remove/'+ deleteId, {}, function(res) {
                if (res.data.affectedRows) {
                  alert(res.msg);
                  window.location.reload();
                }
              });
            });
          });
      });
    </script>
  </body>
</html>