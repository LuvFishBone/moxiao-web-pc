<!doctype html>
<html lang="zh-cn">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/backEnd/reset.css">
      <style>
        html{
          height: 100%;
        }
        body{
          width: 100%;
          height: 100%;
        }
        .partner-page{
          width:100%;
          height:100%;
          position: relative;
        }
        .partner-page .layout{
          width:100%;
          height:100%;
          position: absolute;
          top: 0;
          left: 0;
          z-index: 1;
          background: rgba(0,0,0,.5);
          transition: all ease-out .5s;
          -webkit-transition: all ease-out .5s;
        }
        .partner-page .none{
          display: none;
        }
        .partner-page .edit-box{
          padding: 30px;
          position: absolute;
          left: 0;
          right: 0;
          top: 50%;
          width: 427px;
          height: 225px;
          background: #fff;
          margin: 0 auto;
          -webkit-transform: translate3d(0, -150px, 0);
          transform: translate3d(0, -112px, 0);
           z-index: 2;
        }
        .edit-box .item{
          padding: 5px 10px;
          font-size: 13px;
        }
        .edit-box .btnbox{
          padding-top: 20px;
        }
        .edit-box .item input{
          width:400px;
        }
        .edit-box .item .btn{
          background: #dedede;
          padding: 5px 15px;
        }
        table{
          width: 100%;
          border-radius: 5px;
          font-size: 12px;
          font-weight: normal;
          border: none;
          border-collapse: collapse;
          width: 100%;
          max-width: 100%;
          white-space: nowrap;
          background-color: white;
          table-layout:fixed;word-break:break-all;
        }

        .tb-list thead th {
          color: #fff;
          background: #324960;
        }

        .tb-list td a.ope{
          padding: 0 5px;
          color: #0188ff;
          text-decoration: none;
        }

        .tb-list td a.ope:hover{
          color:#ff6600;
        }

        .tb-list td, .tb-list th {
          padding: 5px 10px;
          height: 30px;
          vertical-align: middle;
          box-sizing: border-box;
          overflow-x: hidden;
          overflow-y: auto;
          font-size: 13px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        .tb-list td.none{
          width: 100%;
        }

        .tb-list td{
          text-align: center;
          border-bottom: 1px solid #dedede;
        }
        .tb-list td img{
          display: inline-block;
          width: 50px;
        }
        .add-btn{
          float: right;
          color: #ff6600;
        }
    </style>
  </head>
  <body>
    <div class="partner-page">
      <div class="layout none" id="editbox">
        <div class="edit-box">
          <div class="item">名称：<input type="text" /></div>
          <div class="item">地址：<input type="text" /></div>
          <div class="item">电话：<input type="text" /></div>
          <div class="item">邮箱：<input type="text" /></div>
          <div class="item btnbox">
            <span class="submit btn">确定</span>
            <span class="cancel btn">取消</span>
          </div>
        </div>
      </div>
      <table class="tb-list" id="partners">
          <thead>
          <tr>
              <th>名称</th>
              <th>地址</th>
              <th>电话</th>
              <th>邮箱</th>
              <th>操作 <a class="add-btn" id="addbtn" href="javascript:void(0);">+添加</a></th>
          </tr>
          </thead>
          <tbody>
            <tr><td class="none" colspan="5">暂无数据</td></tr>
          </tbody>
      </table>
    </div>
  </body>
  <script src="/javascripts/jquery-1.11.1.min.js"></script>
    <script src="/javascripts/ajax-common.js?version=1.0"></script>
  <script>
    $(function() {
      var $addBtn = $('#addbtn');
      var $editbox = $('#editbox');

      $addBtn.click(function(){
        $editbox.removeClass('none')
      });


      var $table = $('#partners');
      var $tbody = $table.find('tbody');
      API.get('/api/partners/list', {}, function(res) {
        // console.log(res);
        var result = res.data;
        var _html = [];
        for (var i = 0; i < result.length; i++) {
          var dt = result[i];
          var item = '<tr><td>' + dt.name +
          '</td><td>' + dt.address +
          '</td><td>' + dt.tel +
           '</td><td>' + dt.email +
          '</td><td>'+ '<a class="ope">编辑</a>' +
          '<a class="ope remove" data-id="'+ dt.id +'">删除</a>' +
          '</td>';
          _html.push(item);
        }
        $tbody.html(_html.join(''));
        $table.find('.remove').click(function() {
          var deleteId = $(this).data('id');
          API.get('/api/partners/remove/'+ deleteId, {}, function(res) {
            if (res.data.affectedRows) {
              alert(res.msg);
              window.location.reload();
            }
          });
        });
      });


    });
  </script>
</html>